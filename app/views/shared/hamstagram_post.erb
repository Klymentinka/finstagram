<article class="hamstagram-post">
  <div class="user-info">
    <img src="<%= hamstagram_post.user.avatar_url %>" alt="<%= hamstagram_post.user.username %>">
    <h2><%= hamstagram_post.user.username %></h2>
    <h3><%= hamstagram_post.humanized_time_ago %></h3>
  </div>
  <a class="photo" href="/hamstagram_posts/<%= hamstagram_post.id %>">
    <img src="<%= hamstagram_post.photo_url %>" alt="hamstagram post from <%= hamstagram_post.user.username %>">
  </a>
  <div class="actions">
    <%= erb(:"shared/likes", { locals: { hamstagram_post: hamstagram_post }}) %>
    <span class="comment-count"><%= hamstagram_post.comment_count %> comments</span>
  </div>
  <% if current_user && allow_new_comment %>
    <%= erb(:"shared/new_comment", { locals: { hamstagram_post: hamstagram_post }}) %>
  <% end %>
  <ul class="comments">
    <% hamstagram_post.comments.each do |comment| %>
      <li>
        <p>
          <%= comment.user.username %>: <%= comment.text %>
        </p>
      </li>
    <% end %>
  </ul>
</article>